# .editorconfig

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 4

[*.ts]
indent_size = 4

[*.tsx]
indent_size = 4

[*.js]
indent_size = 4

[*.jsx]
indent_size = 4
